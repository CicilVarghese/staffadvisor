<section id="sign_in-section" style="padding-top: 12em;">
    <div class="container" style="scroll-behavior: smooth;">
        <div id="sta">
            <h1 class="text-left">Staff Advisors</h1>
        </div>
        <div class="row">
            <div class="col-md-9 col-12">
                <div class="table">
                    <table class="table table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">user_id</th>
                                <th scope="col">name</th>
                                <th scope="col">department</th>
                                <th scope="col">sem</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each allAdvisors}}
                            <tr>
                                <th scope="row">{{this.user_id}}</th>
                                <td>{{this.name}}</td>
                                <td>{{this.department_id}}</td>
                                <td>{{this.semester_id}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <div id="sta" class="mt-5">
            <h1 id="fac" class="text-left">Faculties</h1>
        </div>
        <div class="row">
            <div class="col-md-9 col-12">
                <div class="table">
                    <table class="table table-bordered">
                        <thead class="thead-dark">
                            <tr>
                                <th scope="col">user_id</th>
                                <th scope="col">name</th>
                                <th scope="col">department</th>
                                <th scope="col">Course ID</th>
                            </tr>
                        </thead>
                        <tbody>
                            {{#each allFaculties.details}}
                            <tr>
                                <th scope="row">{{this.user_id}}</th>
                                <td>{{this.name}}</td>
                                <td>{{this.department_id}}</td>
                                <td>{{this.course_id}}</td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
