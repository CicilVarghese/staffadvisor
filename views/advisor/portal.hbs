<form id="searchForm">
    <div class="row">
        <div class="col">
            <label><i>SEARCH :</i></label>
        </div>
        <div class="col">
            <input type="text" id="searchInput" style="border-width: 5px solid; border-radius: 6px;" placeholder="Enter student name">
            <button type="button" id="searchBtn">Search</button>
        </div>
    </div>
</form>


